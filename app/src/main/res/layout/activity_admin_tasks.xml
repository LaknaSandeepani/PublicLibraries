                android:id="@+id/logOut"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Log Out"
                android:background="@color/white"/>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>