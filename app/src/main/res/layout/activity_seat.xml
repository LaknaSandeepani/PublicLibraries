<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_login"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.125"
                app:srcCompat="@drawable/login" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reserve Your Seat"
                android:textColor="#461D8F"
                android:textColorHighlight="#1F2D7A"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:hint="Name"
                />

            <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>

            <RadioGroup
                android:id="@+id/rb_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="48dp"
                    android:text="Female" />
            </RadioGroup>
            <EditText
                android:id="@+id/txtnic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:hint="NIC" />
            <!--        <EditText-->
            <!--            android:id="@+id/txtdob"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:ems="10"-->
            <!--            android:inputType="date"-->
            <!--            android:hint="Date Of Birth"-->
            <!--            android:layout_marginTop="20dp"/>-->
            <TextView
                android:id="@+id/room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:id="@+id/sp_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:entries="@array/list_room"
                />

            <TextView
                android:id="@+id/seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat Number"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                />
            <Spinner
                android:id="@+id/sp_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/list_seat"/>
            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/idEdtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Enter date" />


            <!--                    <DatePicker-->
<!--                        android:id="@+id/date"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Date"-->
<!--                        android:layout_marginTop="20dp"/>-->
            <TextView
                android:id="@+id/from_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Time"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/idFromTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Enter Time" />
<!--                    <TimePicker-->
<!--                        android:id="@+id/fromtime"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="200dp"-->
<!--                        android:padding="10dp"-->
<!--                        android:gravity="top"-->
<!--                        android:hint="Time"-->
<!--                        android:layout_marginTop="20dp"/>-->
            <TextView
                android:id="@+id/to_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Time"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/idToTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Enter Time" />
<!--            <TimePicker-->
<!--                android:id="@+id/totime"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dp"-->
<!--                android:padding="10dp"-->
<!--                android:gravity="top"-->
<!--                android:hint="Time"-->
<!--                android:layout_marginTop="20dp"/>-->

            <Button
                android:id="@+id/btn_reserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:text="Reserve"
                android:layout_marginTop="20dp"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>